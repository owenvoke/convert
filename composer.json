{
    "name": "owenvoke/convert",
    "type": "library",
    "description": "A package for converting data.",
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.5",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "OwenVoke\\Convert\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OwenVoke\\Convert\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
